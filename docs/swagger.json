{
    "swagger": "2.0",
    "info": {
        "description": "API server for booking system.",
        "title": "PhotoStudio API",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/bookings/{id}/deposit": {
            "patch": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Booking"
                ],
                "summary": "Обновить предоплату",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID бронирования",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Сумма предоплаты",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/internal_modules_booking.UpdateDepositRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_booking.BookingResponse"
                        }
                    }
                }
            }
        },
        "/favorites": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Favorites"
                ],
                "summary": "Получить избранное",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "Номер страницы",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 20,
                        "description": "Элементов на страницу",
                        "name": "per_page",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_favorite.FavoriteListResponse"
                        }
                    }
                }
            }
        },
        "/favorites/{studioId}": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Favorites"
                ],
                "summary": "Добавить в избранное",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID студии",
                        "name": "studioId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_favorite.FavoriteResponse"
                        }
                    },
                    "400": {
                        "description": "Studio already in favorites",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_favorite.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Studio not found",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_favorite.ErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Favorites"
                ],
                "summary": "Удалить из избранного",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID студии",
                        "name": "studioId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "404": {
                        "description": "Favorite not found",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_favorite.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/favorites/{studioId}/check": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Favorites"
                ],
                "summary": "Проверить избранное",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID студии",
                        "name": "studioId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_favorite.CheckFavoriteResponse"
                        }
                    }
                }
            }
        },
        "/studios/{id}/working-hours": {
            "put": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "Catalog"
                ],
                "summary": "Обновить часы работы студии",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID студии",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Часы работы",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/photostudio_internal_domain.WorkingHours"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/gin.H"
                        }
                    }
                }
            }
        },
        "/studios/{id}/working-hours/v2": {
            "get": {
                "tags": [
                    "Catalog"
                ],
                "summary": "Получить часы работы студии (новый формат)",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID студии",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/internal_modules_catalog.WorkingHoursResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "gin.H": {
            "type": "object",
            "additionalProperties": {}
        },
        "internal_modules_booking.BookingResponse": {
            "type": "object",
            "properties": {
                "balance": {
                    "description": "TotalPrice - DepositAmount",
                    "type": "number"
                },
                "cancellation_reason": {
                    "description": "Block 9: Только если отменено",
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "deposit_amount": {
                    "description": "Block 10: Для менеджеров",
                    "type": "number"
                },
                "end_time": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "notes": {
                    "type": "string"
                },
                "room_id": {
                    "type": "integer"
                },
                "room_name": {
                    "type": "string"
                },
                "start_time": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "studio_id": {
                    "type": "integer"
                },
                "studio_name": {
                    "type": "string"
                },
                "total_price": {
                    "type": "number"
                }
            }
        },
        "internal_modules_booking.UpdateDepositRequest": {
            "type": "object",
            "required": [
                "deposit_amount"
            ],
            "properties": {
                "deposit_amount": {
                    "type": "number",
                    "minimum": 0
                }
            }
        },
        "internal_modules_catalog.WorkingHoursResponse": {
            "type": "object",
            "properties": {
                "compact_text": {
                    "description": "\"Пн-Пт: 10:00-20:00\"",
                    "type": "string"
                },
                "hours": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/photostudio_internal_domain.WorkingHours"
                    }
                },
                "is_open_now": {
                    "type": "boolean"
                },
                "next_open_time": {
                    "description": "Когда откроется",
                    "type": "string"
                },
                "status_text": {
                    "description": "\"Открыто (закроется в 20:00)\"",
                    "type": "string"
                },
                "studio_id": {
                    "type": "integer"
                }
            }
        },
        "internal_modules_favorite.CheckFavoriteResponse": {
            "type": "object",
            "properties": {
                "is_favorite": {
                    "type": "boolean"
                }
            }
        },
        "internal_modules_favorite.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "internal_modules_favorite.FavoriteListResponse": {
            "type": "object",
            "properties": {
                "favorites": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/internal_modules_favorite.FavoriteResponse"
                    }
                },
                "page": {
                    "type": "integer"
                },
                "per_page": {
                    "type": "integer"
                },
                "total": {
                    "type": "integer"
                },
                "total_pages": {
                    "type": "integer"
                }
            }
        },
        "internal_modules_favorite.FavoriteResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "studio": {
                    "$ref": "#/definitions/internal_modules_favorite.StudioBrief"
                },
                "studio_id": {
                    "type": "integer"
                }
            }
        },
        "internal_modules_favorite.StudioBrief": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "district": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "photos": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "rating": {
                    "type": "number"
                }
            }
        },
        "photostudio_internal_domain.WorkingHours": {
            "type": "object",
            "properties": {
                "close_time": {
                    "description": "\"21:00\"",
                    "type": "string"
                },
                "day_of_week": {
                    "description": "0=Вс, 1=Пн, ..., 6=Сб",
                    "type": "integer"
                },
                "is_closed": {
                    "description": "true = выходной",
                    "type": "boolean"
                },
                "open_time": {
                    "description": "\"09:00\"",
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}